  "bugs": {
    "url": "https://github.com/hugo-vrijswijk/compass/issues"
  },
  "homepage": "https://github.com/hugo-vrijswijk/compass#readme",
  "dependencies": {
    "@vaadin/vaadin-button": "^2.2.1",
    "@vaadin/vaadin-checkbox": "^2.2.10",
