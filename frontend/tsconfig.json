{
  "compilerOptions": {
    "plugins": [
      {
        "name": "ts-lit-plugin"
      },
    ],
    "types": [
      "webpack-env"
    ],
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strict": true,
  }
}
